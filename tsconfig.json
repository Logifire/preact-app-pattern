{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ES2020",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "target": "ES2020",
    "outDir": "webroot/js",
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": false,
    "allowJs": false,
    "moduleResolution": "Node"
  },
  "include": [
    "typescript/**/*.ts",
    "typescript/**/*.tsx",
  ]
}